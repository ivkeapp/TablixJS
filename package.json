{
  "name": "tablixjs",
  "version": "0.1.1",
  "description": "TablixJS is a lightweight, dependency-free JavaScript library for building powerful, responsive data tables.",
  "type": "module",
  "main": "dist/tablixjs.cjs.js",
  "module": "dist/tablixjs.esm.js",
  "types": "dist/index.d.ts",
  "unpkg": "dist/tablixjs.umd.min.js",
  "jsdelivr": "dist/tablixjs.umd.min.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/tablixjs.esm.js",
      "require": "./dist/tablixjs.cjs.js",
      "browser": "./dist/tablixjs.umd.min.js"
    },
    "./dist/*": "./dist/*",
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npx serve . -l 5174",
    "build": "npm run build:js && npm run build:css && npm run build:types",
    "build:js": "rollup -c rollup.config.js",
    "build:css": "node build-css.js",
    "build:types": "npm run copy:types",
    "copy:types": "node -e \"require('fs').copyFileSync('src/index.d.ts', 'dist/index.d.ts')\"",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "prepublishOnly": "npm run build",
    "test": "echo \"Tests not implemented yet\" && exit 0"
  },
  "keywords": [
    "table",
    "datatable",
    "javascript",
    "vanilla-js",
    "react",
    "jquery",
    "data-grid",
    "sorting",
    "filtering",
    "pagination",
    "virtual-scroll",
    "responsive",
    "lightweight",
    "typescript"
  ],
  "author": "Ivan Zarkovic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ivkeapp/TablixJS.git"
  },
  "homepage": "https://github.com/ivkeapp/TablixJS#readme",
  "bugs": {
    "url": "https://github.com/ivkeapp/TablixJS/issues"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "rollup": "^4.50.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-typescript2": "^0.36.0",
    "typescript": "^5.9.2"
  }
}
